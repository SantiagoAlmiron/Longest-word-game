<h1>Games#new</h1>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="score" method="POST" class="row g-3">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="col-auto">
    <input type="word" class="form-control" id="inputPassword2" placeholder="Write a word" name="word">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">Try!</button>
  </div>
</form>

